<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visualizacao.Aluno_materias">

    <Button
        android:id="@+id/bt_matematica"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Matemática"
        app:layout_constraintBottom_toTopOf="@+id/bt_fisica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_portugues" />

    <Button
        android:id="@+id/bt_fisica"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Física"
        app:layout_constraintBottom_toTopOf="@+id/bt_quimica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_matematica" />

    <Button
        android:id="@+id/bt_quimica"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Quimica"
        app:layout_constraintBottom_toTopOf="@+id/bt_biologia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_fisica" />

    <Button
        android:id="@+id/bt_biologia"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Biologia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_quimica" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="Qual matéria você precisa de ajuda?"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_portugues"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Português"
        app:layout_constraintBottom_toTopOf="@+id/bt_matematica"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_chainStyle="packed" />
</androidx.constraintlayout.widget.ConstraintLayout>